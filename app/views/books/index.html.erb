<h1>All Books</h1>

<%= link_to "New Book", new_book_path %>
<%= link_to "New User", new_user_path %>

<% @books.each do |book| %>

<h4>Name <%= book.name %> </h4>
<h4>Title <%= book.title %> </h4>

<%= link_to "Show", book_path(book)  %> 
<%= link_to "Edit", edit_book_path(book) %>
<%= link_to "delete", book_path(book) , data: {turbo_method: :delete, turbo_confirm: "Are you sure want to delete ?"} %>

<% end %>
